---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "Joy Chrissetyo - Software Engineer";
const pageDescription = "Master's student in EECS specializing in Vision-Language Models and Robotics.";
const pageImage = "/glass-mirror/images/pro-profile.jpg"; // You need to create this image
---

<BaseLayout pageTitle={pageTitle} description={pageDescription} image={pageImage}>
    <section>
        <h2>About</h2>
        <p>
            I am a Master's student in EECS at NYCU, specializing in Vision-Language Models 
            and Robotic Assembly. I build systems that bridge the gap between AI perception 
            and physical action.
        </p>
        
        <div class="cta-container">
            <a href="/glass-mirror/cv" class="btn-primary" target="_blank">View Full Resume</a>
        </div>
    </section>

    <style>
        .cta-container {
            margin-top: 1.5rem;
        }
        .btn-primary {
            background-color: var(--text-color);
            color: var(--bg-color);
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
            transition: opacity 0.2s;
        }
        .btn-primary:hover {
            opacity: 0.8;
            text-decoration: none;
        }
    </style>

    <section>
        <h2>Connect</h2>
        <ul class="link-list">
            <li>
                <span class="label">GitHub</span>
                <a href="https://github.com/jychpr" target="_blank">@jychpr</a>
            </li>
            <li>
                <span class="label">Twitter</span>
                <a href="#" target="_blank">@yourhandle</a>
            </li>
            <li>
                <span class="label">Email</span>
                <a href="mailto:your@email.com">Send Hi</a>
            </li>
        </ul>
    </section>

</BaseLayout>