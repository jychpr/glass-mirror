---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "jychpr's Glass Mirror";
const pageDescription = "jychpr's technical background";
const pageImage = "/images/pro-profile.jpg"; 
---

<BaseLayout pageTitle={pageTitle} description={pageDescription} image={pageImage}>
    
    <section class="intro-container">
        
        <h2 class="section-title">About Me</h2>

        <div class="spec-sheet">
            
            <div class="row">
                <span class="label">Name</span>
                <span class="arrow">→</span>
                <span class="value name-highlight">Joy Chrissetyo Prajogo | 王智豪</span>
            </div>

            <div class="row">
                <span class="label">Employment</span>
                <span class="arrow">→</span>
                <span class="value">Master Student majoring EECS in NYCU</span>
            </div>

            <div class="row">
                <span class="label">From</span>
                <span class="arrow">→</span>
                <span class="value">Yogyakarta, Indonesia</span>
            </div>

            <div class="row">
                <span class="label">Location</span>
                <span class="arrow">→</span>
                <span class="value">Hsinchu, Taiwan</span>
            </div>

            <div class="row">
                <span class="label">Skillset</span>
                <span class="arrow">→</span>
                <span class="value">AI, Computer Vision, Image Processing, VLM</span>
            </div>

            <div class="row">
                <span class="label">Research Topic</span>
                <span class="arrow">→</span>
                <span class="value">Open-Vocabulary Detection Model for Robotic Assembly</span>
            </div>

            <div class="row">
                <span class="label">Reach Out</span>
                <span class="arrow">→</span>
                <span class="value">
                    <a href="mailto:joy.chr.pr@gmail.com" class="link-highlight">Say Hi to me!</a>
                </span>
            </div>

            <div class="divider"></div>

            <div class="row">
                <span class="label">Check Also</span>
                <span class="arrow">→</span>
                <span class="value social-links">
                    <a href="https://github.com/jychpr" target="_blank">Github</a> / 
                    <a href="https://www.kaggle.com/jychpr" target="_blank">Kaggle</a>
                </span>
            </div>

        </div>

        <div class="cta-container">
            <a href="/cv" class="btn-primary" target="_blank">View Full Resume</a>
        </div>
    </section>

    <style>
        .intro-container {
            margin-top: 2rem;
            font-family: 'Courier New', Courier, monospace; 
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            color: var(--text-color);
            border-bottom: 2px solid var(--border-color); /* Optional underline */
            padding-bottom: 0.5rem;
            width: 100%;
        }

        /* THE GRID MAGIC */
        .spec-sheet {
            display: flex;
            flex-direction: column;
            gap: 1.2rem; 
            font-size: 1.05rem;
        }

        .row {
            display: grid;
            grid-template-columns: 120px 30px 1fr; 
            align-items: baseline;
        }

        .label {
            font-weight: bold;
            color: var(--secondary-text); 
            opacity: 0.8;
        }

        .arrow {
            color: var(--text-color);
            opacity: 0.5;
            user-select: none; 
        }

        .value {
            color: var(--text-color);
            line-height: 1.4;
        }

        .name-highlight {
            font-weight: 800;
            color: var(--text-color);
        }

        .link-highlight {
            text-decoration: underline;
            text-decoration-style: dotted; 
            text-underline-offset: 4px;
            color: var(--text-color);
        }

        .social-links a {
            margin-right: 10px;
            color: var(--text-color);
            text-decoration: none;
            border-bottom: 1px solid transparent;
            transition: border-color 0.2s;
        }

        .social-links a:hover {
            border-bottom: 1px solid var(--text-color);
        }

        .divider {
            height: 1px;
            background: var(--border-color); 
            opacity: 0.3;
            margin: 0.5rem 0;
        }

        /* BUTTON STYLES - UPDATED TO CENTER */
        .cta-container {
            margin-top: 3rem;
            display: flex;
            justify-content: center; /* === THIS CENTERS IT === */
            width: 100%;
        }

        .btn-primary {
            background-color: var(--text-color);
            color: var(--bg-color);
            padding: 12px 24px;
            border-radius: 4px;
            font-weight: bold;
            text-decoration: none;
            transition: opacity 0.2s, transform 0.1s;
            font-family: -apple-system, BlinkMacSystemFont, sans-serif; 
        }

        .btn-primary:hover {
            opacity: 0.9;
            transform: translateY(-2px); 
        }

        @media (max-width: 500px) {
            .row {
                grid-template-columns: 1fr; 
                gap: 0.2rem;
                margin-bottom: 0.5rem;
            }
            .arrow {
                display: none; 
            }
            .label {
                font-size: 0.9rem;
                text-transform: uppercase;
                letter-spacing: 1px;
            }
        }
    </style>

</BaseLayout>