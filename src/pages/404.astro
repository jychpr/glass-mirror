---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout pageTitle="404 - Lost in the Mirror">
    <div class="centered">
        <h1>404</h1>
        <p>You have wandered off the path.</p>
        <p class="sub">This page does not exist in the reflection.</p>
        
        <div class="actions">
            <a href="/glass-mirror/" class="btn-primary">Return to Pro Side ðŸ‘”</a>
            <a href="/glass-mirror/fun" class="btn-secondary">Return to Fun Side ðŸŽ®</a>
        </div>
    </div>

    <style>
        .centered {
            text-align: center;
            margin-top: 4rem;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            font-size: 6rem;
            margin: 0;
            line-height: 1;
            color: var(--text-color);
        }

        p {
            font-size: 1.2rem;
            margin: 0.5rem 0;
            color: var(--text-color);
        }
        
        .sub {
            font-size: 0.9rem;
            color: var(--secondary-text);
            margin-bottom: 2rem;
        }

        .actions {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            justify-content: center;
        }

        .btn-primary, .btn-secondary {
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
            text-decoration: none;
            transition: opacity 0.2s;
        }

        .btn-primary {
            background-color: var(--text-color);
            color: var(--bg-color);
        }

        .btn-secondary {
            border: 2px solid var(--text-color);
            color: var(--text-color);
        }

        .btn-primary:hover, .btn-secondary:hover {
            opacity: 0.8;
            text-decoration: none;
        }
    </style>
</BaseLayout>