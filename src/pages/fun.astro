const pageTitle = "Akihito - jychpr's Glass Mirror another side";
const pageDescription = "jychpr's another side of the mirror";
const pageImage = "/glass-mirror/images/fun-profile.png"; 
---

<BaseLayout pageTitle={pageTitle} description={pageDescription} image={pageImage}>
    
    <section class="intro-container">
        
        <h2 class="section-title">General Info</h2>

        <div class="spec-sheet">

            <div class="row">
                <span class="label">Status</span>
                <span class="arrow">â†’</span>
                <span class="value name-highlight">Solo leveling</span>
            </div>            

            <div class="row">
                <span class="label">Hobbies</span>
                <span class="arrow">â†’</span>
                <span class="value">Listening to music, playing games, gyms, watching movies (and series formerly), amateur photography</span>
            </div>
        </div>
    </section>

    <section class="intro-container">
        
        <h2 class="section-title">Listening Hobby</h2>

        <div class="spec-sheet">
            <div class="row">
                <span class="label">Favorite music genres</span>
                <span class="arrow">â†’</span>
                <span class="value">EDM (especially hardstyle), Worship, Japanese (and anime music former favorite)</span>
            </div>

            <div class="row">
                <span class="label">Favorite music artists</span>
                <span class="arrow">â†’</span>
                <span class="value">Kastra, Elevation Worship, William Black, Bethel Music, Da Tweekaz, JPCC, True Worshippers</span>
            </div>

            <div class="row">
                <span class="label">Check my music taste</span>
                <span class="arrow">â†’</span>
                <span class="value social-links">
                    <a href="https://open.spotify.com/user/z2iwgdtdoj4yvehpb3ik0b44u?si=f6yqOFM2QIyXiQMHonAUoA" target="_blank">Spotify</a>
                </span>
            </div>            
        </div>
    </section>

    <section class="intro-container">
        
        <h2 class="section-title">Photography Hobby</h2>

            <div class="row">
                <span class="label">Photography target or objects?</span>
                <span class="arrow">â†’</span>
                <span class="value">Buildings, nature, (and still trying to put peoples in frame to look good)</span>
            </div>

            <div class="row">
                <span class="label">Level</span>
                <span class="arrow">â†’</span>
                <span class="value">Amateur</span>
            </div>

            <div class="row">
                <span class="label">Gear</span>
                <span class="arrow">â†’</span>
                <span class="value">Iphone 15 Pro Max</span>
            </div>

            <div class="row">
                <span class="label">Portofolio here</span>
                <span class="arrow">â†’</span>
                <span class="value social-links">
                    <a href="https://www.instagram.com/wzhsnapshots" target="_blank">Instagram</a>
                </span>
            </div>     
        </div>
    </section>

    <section class="intro-container">
        
        <h2 class="section-title">Gaming Hobby</h2>

            <div class="row">
                <span class="label">Gamer status</span>
                <span class="arrow">â†’</span>
                <span class="value">FPS and action-rpg-story-based game enjoyer</span>
            </div>

            <div class="row">
                <span class="label">Competitive Gaming Roles</span>
                <span class="arrow">â†’</span>
                <span class="value">Primary support, IGL second, entry/assult/sniper third, last is flex</span>
            </div>

            <div class="divider"></div>    

            <div class="row">
                <span class="label">Side quest</span>
                <span class="arrow">â†’</span>
                <span class="value">Streaming and content creation (more into streaming anyway)</span>
            </div>

            <div class="row">
                <span class="label">Where?</span>
                <span class="arrow">â†’</span>
                <span class="value">Youtube and Twitch (former plarform)</span>
            </div>
        </div>

        <div class="cta-container">
            <a href="https://www.youtube.com/@7Akihito" class="btn-primary" target="_blank">Check My Content ðŸ“º</a>
        </div>
    </section>

    <style>
        /* REUSING THE EXACT SAME STYLES FOR CONSISTENCY */
        .intro-container {
            margin-top: 2rem;
            font-family: 'Courier New', Courier, monospace; 
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            color: var(--text-color);
            border-bottom: 2px solid var(--border-color);
            padding-bottom: 0.5rem;
            width: 100%;
        }

        .spec-sheet {
            display: flex;
            flex-direction: column;
            gap: 1.2rem; 
            font-size: 1.05rem;
        }

        .row {
            display: grid;
            grid-template-columns: 120px 30px 1fr; 
            align-items: baseline;
        }

        .label {
            font-weight: bold;
            color: var(--secondary-text); 
            opacity: 0.8;
        }

        .arrow {
            color: var(--text-color);
            opacity: 0.5;
            user-select: none; 
        }

        .value {
            color: var(--text-color);
            line-height: 1.4;
        }

        .name-highlight {
            font-weight: 800;
            color: var(--text-color); /* You could make this a different color for Fun mode if you want! */
        }

        .link-highlight {
            text-decoration: underline;
            text-decoration-style: dotted; 
            text-underline-offset: 4px;
            color: var(--text-color);
        }

        .social-links a {
            margin-right: 10px;
            color: var(--text-color);
            text-decoration: none;
            border-bottom: 1px solid transparent;
            transition: border-color 0.2s;
        }

        .social-links a:hover {
            border-bottom: 1px solid var(--text-color);
        }

        .divider {
            height: 1px;
            background: var(--border-color); 
            opacity: 0.3;
            margin: 0.5rem 0;
        }

        .cta-container {
            margin-top: 3rem;
            display: flex;
            justify-content: center;
            width: 100%;
        }

        .btn-primary {
            background-color: var(--text-color);
            color: var(--bg-color);
            padding: 12px 24px;
            border-radius: 4px;
            font-weight: bold;
            text-decoration: none;
            transition: opacity 0.2s, transform 0.1s;
            font-family: -apple-system, BlinkMacSystemFont, sans-serif; 
        }

        .btn-primary:hover {
            opacity: 0.9;
            transform: translateY(-2px); 
        }

        @media (max-width: 500px) {
            .row {
                grid-template-columns: 1fr; 
                gap: 0.2rem;
                margin-bottom: 0.5rem;
            }
            .arrow {
                display: none; 
            }
            .label {
                font-size: 0.9rem;
                text-transform: uppercase;
                letter-spacing: 1px;
            }
        }
    </style>
</BaseLayout>