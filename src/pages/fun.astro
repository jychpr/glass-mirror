---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "7Akihito - Gamer & Creator";
const pageDescription = "Gaming setup, Gym PRs, and random thoughts on life.";
const pageImage = "/glass-mirror/images/fun-setup.jpg"; 
---

<BaseLayout pageTitle={pageTitle} description={pageDescription} image={pageImage}>
    
    <section class="intro-container">
        
        <h2 class="section-title">Character Stats</h2>

        <div class="spec-sheet">
            
            <div class="row">
                <span class="label">Class</span>
                <span class="arrow">â†’</span>
                <span class="value name-highlight">Tactical Shooter / completionist</span>
            </div>

            <div class="row">
                <span class="label">Guild</span>
                <span class="arrow">â†’</span>
                <span class="value">Solo Queue Survivor</span>
            </div>

            <div class="row">
                <span class="label">Server</span>
                <span class="arrow">â†’</span>
                <span class="value">Asia / TW / JP</span>
            </div>

            <div class="row">
                <span class="label">Current Quest</span>
                <span class="arrow">â†’</span>
                <span class="value">Grinding CS2 & Maintaining sanity</span>
            </div>

            <div class="row">
                <span class="label">Skill Tree</span>
                <span class="arrow">â†’</span>
                <span class="value">FPS Aim, Video Editing, Gym (Str Build), Faith</span>
            </div>

            <div class="row">
                <span class="label">Loot Drop</span>
                <span class="arrow">â†’</span>
                <span class="value">
                    <a href="mailto:your.gaming.email@gmail.com" class="link-highlight">Send Collab Request ðŸ“©</a>
                </span>
            </div>

            <div class="divider"></div>

            <div class="row">
                <span class="label">Connect</span>
                <span class="arrow">â†’</span>
                <span class="value social-links">
                    <a href="https://steamcommunity.com/id/katzeowo/" target="_blank">Steam</a> / 
                    <a href="https://youtube.com/@yourchannel" target="_blank">YouTube</a> /
                    <a href="https://twitch.tv/yourhandle" target="_blank">Twitch</a>
                </span>
            </div>

        </div>

        <div class="cta-container">
            <a href="/glass-mirror/content" class="btn-primary">Check My Content ðŸ“º</a>
        </div>
    </section>

    <style>
        /* REUSING THE EXACT SAME STYLES FOR CONSISTENCY */
        .intro-container {
            margin-top: 2rem;
            font-family: 'Courier New', Courier, monospace; 
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            color: var(--text-color);
            border-bottom: 2px solid var(--border-color);
            padding-bottom: 0.5rem;
            width: 100%;
        }

        .spec-sheet {
            display: flex;
            flex-direction: column;
            gap: 1.2rem; 
            font-size: 1.05rem;
        }

        .row {
            display: grid;
            grid-template-columns: 120px 30px 1fr; 
            align-items: baseline;
        }

        .label {
            font-weight: bold;
            color: var(--secondary-text); 
            opacity: 0.8;
        }

        .arrow {
            color: var(--text-color);
            opacity: 0.5;
            user-select: none; 
        }

        .value {
            color: var(--text-color);
            line-height: 1.4;
        }

        .name-highlight {
            font-weight: 800;
            color: var(--text-color); /* You could make this a different color for Fun mode if you want! */
        }

        .link-highlight {
            text-decoration: underline;
            text-decoration-style: dotted; 
            text-underline-offset: 4px;
            color: var(--text-color);
        }

        .social-links a {
            margin-right: 10px;
            color: var(--text-color);
            text-decoration: none;
            border-bottom: 1px solid transparent;
            transition: border-color 0.2s;
        }

        .social-links a:hover {
            border-bottom: 1px solid var(--text-color);
        }

        .divider {
            height: 1px;
            background: var(--border-color); 
            opacity: 0.3;
            margin: 0.5rem 0;
        }

        .cta-container {
            margin-top: 3rem;
            display: flex;
            justify-content: center;
            width: 100%;
        }

        .btn-primary {
            background-color: var(--text-color);
            color: var(--bg-color);
            padding: 12px 24px;
            border-radius: 4px;
            font-weight: bold;
            text-decoration: none;
            transition: opacity 0.2s, transform 0.1s;
            font-family: -apple-system, BlinkMacSystemFont, sans-serif; 
        }

        .btn-primary:hover {
            opacity: 0.9;
            transform: translateY(-2px); 
        }

        @media (max-width: 500px) {
            .row {
                grid-template-columns: 1fr; 
                gap: 0.2rem;
                margin-bottom: 0.5rem;
            }
            .arrow {
                display: none; 
            }
            .label {
                font-size: 0.9rem;
                text-transform: uppercase;
                letter-spacing: 1px;
            }
        }
    </style>
</BaseLayout>