---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "Akihito's Gaming Things";
const pageDescription = "PC Specs, Peripherals, and Gaming History.";
const pageImage = "/glass-mirror/images/pc-rig.png"; 
---

<BaseLayout pageTitle={pageTitle} description={pageDescription} image={pageImage}>
    
    <section class="gaming-container">

        <h2 class="section-title">The Rig (PC Specs)</h2>
        <div class="spec-sheet">
            <div class="row">
                <span class="label">GPU</span>
                <span class="arrow">→</span>
                <span class="value">Gigabyte AORUS Master RTX 5090 32GB VRAM</span>
            </div>
            <div class="row">
                <span class="label">CPU</span>
                <span class="arrow">→</span>
                <span class="value">AMD Ryzen 7 9800X3D</span>
            </div>
            <div class="row">
                <span class="label">RAM</span>
                <span class="arrow">→</span>
                <span class="value">Micron Crucial PRO 96GB DDR5</span>
            </div>
            <div class="row">
                <span class="label">Storage</span>
                <span class="arrow">→</span>
                <span class="value">4TB NVMe ADATA XPG GAMMIX S70 and 2TB Acer Predator</span>
            </div>
            <div class="row">
                <span class="label">Case</span>
                <span class="arrow">→</span>
                <span class="value">Antec FLUX SE</span>
            </div>
        </div>

        <h2 class="section-title">The Gear (Peripherals)</h2>
        <div class="spec-sheet">
            <div class="row">
                <span class="label">Monitor</span>
                <span class="arrow">→</span>
                <span class="value">AOC 180Hz</span>
            </div>
            <div class="row">
                <span class="label">Mouse</span>
                <span class="arrow">→</span>
                <span class="value">Zowie U2</span>
            </div>
            <div class="row">
                <span class="label">Keyboard</span>
                <span class="arrow">→</span>
                <span class="value">Alice Layout and Logitech G PRO Keyboard</span>
            </div>
            <div class="row">
                <span class="label">Audio</span>
                <span class="arrow">→</span>
                <span class="value">MSI earbuds</span>
            </div>
        </div>

        <h2 class="section-title">Current Rotation</h2>
        <div class="game-list">
            <div class="game-item">
                <span class="game-title">CS2</span>
                <span class="game-desc">The OG FPS game</span>
            </div>
            <div class="game-item">
                <span class="game-title">Battlefield 6</span>
                <span class="game-desc">Literally game about being in a battlefield</span>
            </div>
            <div class="game-item">
                <span class="game-title">Dispatch</span>
                <span class="game-desc">Visual novel superhero story</span>
            </div>
        </div>

        <div class="cta-container">
            <a href="https://steamcommunity.com/id/katzeowo/" target="_blank" class="btn-ghost">Steam</a>
            <a href="https://youtube.com/@7Akihito" target="_blank" class="btn-ghost">YouTube</a>
            <a href="https://twitch.tv/7Akihito" target="_blank" class="btn-ghost">Twitch</a>
        </div>

    </section>

    <style>
        .gaming-container {
            margin-top: 1rem;
            font-family: 'Courier New', Courier, monospace; 
        }

        .main-title {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: -1px;
        }

        .intro-text {
            color: var(--secondary-text);
            margin-bottom: 2.5rem;
            font-style: italic;
        }

        .section-title {
            font-size: 1.2rem;
            margin-top: 2.5rem;
            margin-bottom: 1rem;
            color: var(--text-color);
            border-bottom: 1px dashed var(--border-color);
            padding-bottom: 0.5rem;
            text-transform: uppercase;
        }

        /* === REUSING THE GRID SYSTEM === */
        .spec-sheet {
            display: flex;
            flex-direction: column;
            gap: 0.8rem; 
            font-size: 1rem;
        }

        .row {
            display: grid;
            grid-template-columns: 100px 30px 1fr; /* Fixed Width Labels */
            align-items: baseline;
        }

        .label {
            font-weight: bold;
            color: var(--secondary-text); 
        }

        .arrow {
            color: var(--text-color);
            opacity: 0.5;
            user-select: none; 
        }

        .value {
            color: var(--text-color);
        }

        /* === GAME LIST STYLES === */
        .game-list {
            display: grid;
            gap: 1rem;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        }

        .game-item {
            border: 1px solid var(--border-color);
            padding: 1rem;
            border-radius: 4px;
            background: rgba(0,0,0,0.02);
        }

        .game-title {
            display: block;
            font-weight: 800;
            margin-bottom: 0.2rem;
        }

        .game-desc {
            font-size: 0.9rem;
            color: var(--secondary-text);
        }

        /* === BUTTONS === */
        .cta-container {
            margin-top: 3rem;
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .btn-ghost {
            padding: 10px 20px;
            border: 1px solid var(--text-color);
            color: var(--text-color);
            text-decoration: none;
            font-weight: bold;
            border-radius: 4px;
            transition: all 0.2s;
        }

        .btn-ghost:hover {
            background: var(--text-color);
            color: var(--bg-color);
        }

        @media (max-width: 500px) {
            .row {
                grid-template-columns: 1fr; 
                gap: 0.2rem;
                margin-bottom: 0.8rem;
            }
            .arrow { display: none; }
        }
    </style>
</BaseLayout>