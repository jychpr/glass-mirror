<style>
    /* LOCAL STYLES FOR CONTENT */
    h1 { 
        margin: 0; 
        font-size: 18pt; /* Reduced from 24pt to fit A4 */
        text-transform: uppercase; 
        letter-spacing: 1px;
        line-height: 1.2; /* Better spacing if it does wrap */
    }
    h2 { 
        font-size: 14pt; 
        border-bottom: 2px solid #333; 
        margin-top: 15px; 
        margin-bottom: 10px; 
        text-transform: uppercase; 
    }
    h3 { margin: 0; font-size: 11pt; font-weight: bold; }
    
    .chinese-name { font-weight: normal; margin-left: 10px; }
    .cv-header { text-align: center; margin-bottom: 20px; }
    .contact-info p { margin: 2px 0; font-size: 10pt; color: #444; }
    .contact-info a { color: #000; text-decoration: none; border-bottom: 1px dotted #000; }
    
    .item { margin-bottom: 12px; }
    .row { display: flex; justify-content: space-between; align-items: baseline; }
    .date { font-size: 10pt; font-weight: bold; }
    .sub { margin: 2px 0; font-style: italic; font-size: 10pt; }
    .desc { margin: 2px 0; font-size: 10pt; }
    
    .details { margin: 4px 0 0 18px; padding: 0; font-size: 10pt; }
    .details li { margin-bottom: 2px; }
    
    .skills { font-size: 10pt; line-height: 1.4; }

    .language-divider { margin: 40px 0; border: 0; border-top: 1px dashed #ccc; }
    
    /* PRINT BREAKS */
    @media print {
        .page-break { page-break-before: always; }
        .language-divider { display: none; }
        h2 { -webkit-print-color-adjust: exact; border-bottom: 2px solid black !important; }
    }
</style>