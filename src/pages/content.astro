---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/Card.astro'; // Reuse your component!
const pageTitle = "Content Creation";
---
<BaseLayout pageTitle={pageTitle}>
    <h1>Content Creation</h1>
    <div class="card-grid">
        <Card 
            url="https://youtube.com/..."
            title="My Latest Video"
            body="Reviewing the new framework."
            image={{ url: '/glass-mirror/images/yt-thumb.jpg', alt: 'YT' }}
        />
    </div>
    <style>
        .card-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem; }
    </style>
</BaseLayout>