---
// src/components/Card.astro
const { url, image, title, body, date } = Astro.props;

// Logic for the fallback image happens INSIDE the component now.
// This means every page using this Card gets this safety net automatically.
const imageSrc = image?.url || '/glass-mirror/images/test.jpg';
const imageAlt = image?.alt || 'Thumbnail';
---

<a href={url} class="card">
    <div class="card-image">
        <img src={imageSrc} alt={imageAlt} />
    </div>
    
    <div class="card-content">
        <h3>{title}</h3>
        <p>{body}</p>
        {date && <span class="date">{date}</span>}
    </div>
</a>

<style>
    /* Move the CSS specific to the Card here. 
       We removed .card-grid styles because that belongs to the container, not the card. */
    .card {
        border: 1px solid var(--border-color);
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        display: flex;
        flex-direction: column;
        text-decoration: none;
        color: var(--text-color);
        background: var(--bg-color);
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px rgba(0,0,0,0.1);
        text-decoration: none;
    }

    .card-image img {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .card-content {
        padding: 1rem;
    }

    .card-content h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.25rem;
        color: var(--text-color);
    }

    .card-content p {
        font-size: 0.9rem;
        color: var(--secondary-text);
        margin-bottom: 1rem;
    }
    
    .date {
        font-size: 0.8rem;
        color: var(--secondary-text);
        opacity: 0.7;
    }
</style>