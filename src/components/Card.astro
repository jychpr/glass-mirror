---
/* src/components/Card.astro */
const { title, url, image, body, date } = Astro.props;

// === THE SMART LOGIC ===
// 1. Check if the URL starts with "http" (External) or "/" (Internal)
const isExternal = url.startsWith('http');

// 2. Set the target based on that check
const target = isExternal ? "_blank" : "_self";

// 3. Security best practice for new tabs (prevents tab-napping)
const rel = isExternal ? "noopener noreferrer" : "";
---

<a href={url} class="card" target={target} rel={rel}>
    
    <div class="card-image">
        {image && <img src={image.url} alt={image.alt} />}
    </div>
    <div class="card-content">
        <div class="card-header">
            <h3>{title}</h3>
            {date && <span class="date">{date}</span>}
        </div>
        <p>{body}</p>
    </div>
</a>

<style>
    /* Move the CSS specific to the Card here. 
       We removed .card-grid styles because that belongs to the container, not the card. */
    .card {
        border: 1px solid var(--border-color);
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        display: flex;
        flex-direction: column;
        text-decoration: none;
        color: var(--text-color);
        background: var(--bg-color);
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px rgba(0,0,0,0.1);
        text-decoration: none;
    }

    .card-image img {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .card-content {
        padding: 1rem;
    }

    .card-content h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.25rem;
        color: var(--text-color);
    }

    .card-content p {
        font-size: 0.9rem;
        color: var(--secondary-text);
        margin-bottom: 1rem;
    }
    
    .date {
        font-size: 0.8rem;
        color: var(--secondary-text);
        opacity: 0.7;
    }
</style>