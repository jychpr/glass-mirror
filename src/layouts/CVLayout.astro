---
import '../styles/global.css';
const { pageTitle } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
    </head>
    <body class="cv-mode">
        <div class="no-print download-bar">
            <a href="/glass-mirror/" class="back-btn">‚Üê Back to Site</a>
            <button onclick="window.print()" class="print-btn">Save as PDF / Print</button>
        </div>

        <main class="a4-page">
            <slot />
        </main>
    </body>
</html>

<style is:global>
    /* === SCREEN STYLES (Unchanged) === */
    body.cv-mode {
        background-color: #525659;
        margin: 0;
        padding: 2rem 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
        max-width: none;
        width: 100%;
    }

    .a4-page {
        background: white;
        width: 210mm;
        min-height: 297mm;
        padding: 15mm 20mm; /* Screen padding (looks like paper) */
        box-shadow: 0 0 15px rgba(0,0,0,0.3);
        margin-bottom: 2rem;
        color: #000;
        box-sizing: border-box;
    }

    .download-bar {
        position: fixed;
        top: 20px;
        right: 20px;
        background: #333;
        padding: 10px 20px;
        border-radius: 8px;
        display: flex;
        gap: 15px;
        z-index: 999;
        box-shadow: 0 4px 6px rgba(0,0,0,0.2);
    }
    
    .download-bar a, .download-bar button {
        color: white;
        text-decoration: none;
        font-weight: bold;
        font-family: sans-serif;
        background: none;
        border: none;
        cursor: pointer;
        font-size: 0.9rem;
    }

    .download-bar button:hover {
        text-decoration: underline;
    }

    /* === PRINT MAGICK V3 (Multi-Page Margins) === */
    @media print {
        @page {
            /* This is the key fix. It puts margins on EVERY page. */
            margin: 15mm 20mm; 
            size: A4;
        }
        
        body.cv-mode {
            background: white;
            display: block;
        }

        .a4-page {
            /* Remove manual constraints and let the content flow */
            width: 100%; 
            height: auto;
            margin: 0;
            padding: 0; /* We let @page handle the margins now */
            box-shadow: none;
            border: none;
        }

        /* Remove the manual top-padding hack since @page handles it */
        .chinese-version {
            padding-top: 0;
            page-break-before: always;
        }
        
        .page-break {
            page-break-before: always;
        }

        .no-print {
            display: none !important;
        }

        * {
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }
        
        /* Prevent awkward breaks inside items */
        .item, .section-block {
            break-inside: avoid;
        }
        
        h2 {
            break-after: avoid;
        }
    }
</style>