---
import '../styles/global.css';
const { pageTitle } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
    </head>
    <body class="cv-mode">
        <div class="no-print download-bar">
            <a href="/glass-mirror/" class="back-btn">‚Üê Back to Site</a>
            <button onclick="window.print()" class="print-btn">Save as PDF / Print</button>
        </div>

        <main class="a4-page">
            <slot />
        </main>
    </body>
</html>

<style is:global>
    /* CV SPECIFIC STYLES */
    body.cv-mode {
        background-color: #525659; /* Acrobat Reader Grey */
        margin: 0;
        padding: 2rem 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
    }

    .a4-page {
        background: white;
        width: 210mm; /* Exact A4 Width */
        min-height: 297mm; /* A4 Height */
        padding: 15mm 20mm; /* Standard Margins */
        box-shadow: 0 0 15px rgba(0,0,0,0.3);
        margin-bottom: 2rem;
        color: #000; /* Force black text for printing */
        box-sizing: border-box;
    }

    /* THE PRINT BUTTON BAR */
    .download-bar {
        position: fixed;
        top: 20px;
        right: 20px;
        background: #333;
        padding: 10px 20px;
        border-radius: 8px;
        display: flex;
        gap: 15px;
        z-index: 999;
        box-shadow: 0 4px 6px rgba(0,0,0,0.2);
    }
    
    .download-bar a, .download-bar button {
        color: white;
        text-decoration: none;
        font-weight: bold;
        font-family: sans-serif;
        background: none;
        border: none;
        cursor: pointer;
        font-size: 0.9rem;
    }

    .download-bar button:hover {
        text-decoration: underline;
    }

    /* PRINT MAGICK: This is what happens when Ctrl+P is pressed */
    @media print {
        @page {
            margin: 0;
            size: auto;
        }
        
        body.cv-mode {
            background: white;
            display: block;
            padding: 0;
        }

        .a4-page {
            width: 100%;
            height: auto;
            box-shadow: none;
            margin: 0;
            padding: 15mm; /* Keep margins for the paper */
        }

        .no-print {
            display: none !important;
        }

        /* Force background colors to print if needed */
        * {
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }
    }
</style>