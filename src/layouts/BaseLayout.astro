---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// 1. Accept new props for Description and Image
const { 
    pageTitle, 
    description = "Personal portfolio and blog.", // Default fallback
    image = "/glass-mirror/images/default-social.jpg" // Default fallback
} = Astro.props;

// 2. Construct the full URL for the image (Social networks hate relative paths)
const siteUrl = "https://jychpr.github.io"; // YOUR DOMAIN
const socialImage = image.startsWith('http') ? image : `${siteUrl}${image}`;
const currentUrl = Astro.url.href;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/glass-mirror/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        
        <title>{pageTitle}</title>
        <meta name="description" content={description} />

        <meta property="og:type" content="website" />
        <meta property="og:url" content={currentUrl} />
        <meta property="og:title" content={pageTitle} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={socialImage} />

        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:url" content={currentUrl} />
        <meta name="twitter:title" content={pageTitle} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={socialImage} />
    </head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>